<h1 class="text-center" style="padding-top: 25px">Contact Us</h1>
<form class="col-md-6 offset-md-3"  method="post">
    {{#each errorMessages}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
    {{/each}}
<div class="form-group">
    <label>Name</label>
    <input class="form-control" placeholder="Enter Name Here" name='name' value={{name}}>
  </div>
  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="Enter Email Here" aria-describedby="emailHelp" name='email' value={{email}}>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label>message</label>
    <textarea class="form-control" placeholder="Write your message Here" rows="3" name='message'>{{message}}</textarea>
  </div>
